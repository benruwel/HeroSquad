


{{#partial "content"}}

    {{#if username }}
    
        <div class="card" style="min-width : 600px">
            <div class="card-body text-center">
              Hello <span class="font-weight-bold">{{ username }}</span> start by creating:
            </div>
        </div>
        <div class="btn-group d-flex justify-content-center">
            <a href="/squads/new" class="btn btn-secondary">New Squad</a>
            <a href="heroes/new" class="btn btn-secondary">New Hero</a>
        </div>

        <div class="squad-list">

        {{#if squads }}

            <div class="card" style="max-width : 600px">
                <div class="card-body text-center">
                    Squad List
                </div>
            </div>

            {{#each squads}}
            <div class="card" style="max-width : 800px">
                <div class="card-header">
                    {{ squadName }}
                </div>
                <div class="card-body">
                    <p class="card-text">{{ cause }}</p>
                </div>
                <div class="card-footer">
                    <p>Members: <span class="badge badge-warning">{{ numberOfHeroes }}</span> / <span class="badge badge-warning">{{ maxNumber }}</span></p>
                    <a href="/squad/{{ id }}" class="btn btn-warning">Squad</a>
                </div>
            </div>
            {{/each}}
        {{else }}
            <div class="card text-centre" style="max-width : 800px">
                <div class="card-body text-center">
                <p>Create a squad üëÜüèΩ</p>
                </div>
            </div>
        {{/if }}
        </div>
    {{else }}
        <div class="card" style="min-width : 600px ">
            <div class="card-body">
                <form action="/login" method="post">
                    <div class="form-group">
                        <input class="form-control" id="username" name="username" type="text" placeholder="Your name" >
                    </div>
                    <button class="btn btn-primary" type="submit">Login</button>

                </form>
            </div>
        </div>

    {{/if }}
    
{{/partial}}



{{> layout.hbs}}