
{{#partial "content"}}

    
    <div class="card" style="min-width: 600px; margin-bottom : 50px">

        <div class="card-header">
            Now create a character that will fight for justice ðŸ¦¾
        </div>

        <div class="card-body">

            <form action='/heroes/new' method="POST">
                
                <div class="form-group mx-sm-5 mb-2">
                    <label for="hero-name">Hero's name</label>
                    <input name="heroName" class="form-control" type="text">
                </div>
                <div class="form-group mx-sm-5 mb-2">
                    <label for="age">Age</label>
                    <input name="age" class="form-control" type="number">
                </div>

                <div class="form-group mx-sm-5 mb-2">
                    <label for="strength">Squad</label>
                    <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="squadName">
                    {{#if squads}}
                        {{#each squads}}
                        <option selected >Choose squad</option>
                        <option value="{{ id }}">{{ squadName }}</option>
                        {{/each}}
                    {{else }}
                        <option label="Create squad first" ></option>
                    {{/if }}
                    </select>
                </div>

                <div class="form-group mx-sm-5 mb-2">
                    <label for="strength">Strength ðŸ˜¡</label>
                    <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="strength">
                        <option selected >Choose...</option>
                        <option value="Energy Blasts"> Energy Blasts</option>
                        <option value=" Electric Manipulation"> Electric Manipulation</option>
                        <option value="Channel The Devil"> Channel The Devil</option>
                    </select>        
                </div>
                <div class="form-group mx-sm-5 mb-2">
                        <label for="strength">Weakness ðŸ¥¶</label>
                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="weakness">
                            <option selected >Choose...</option>
                            <option value="Lack of water"> Lack of water</option>
                            <option value="Running too fast">Running too fast</option>
                            <option value="Fake designer"> Fake designer</option>
                        </select>
                </div>
                <div class="form-group mx-sm-5 mb-2">
                    <label for="overall">Overall</label>
                    <input name="overall" class="form-control" type="number">
                </div>


                <button type="submit" class="btn btn-primary mx-sm-5 mb-2">Submit</button>
            </form>

        </div>
    </div>
{{/partial}}

