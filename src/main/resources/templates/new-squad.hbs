

{{#partial "content"}}


    <div class="card" style="min-width: 600px;">

        <div class="card-header">
	        <p class="card-text">Before you start saving lives you need a squad with goals. Create your new squad!</p>
        </div>

        <div class="card-body">
            <form action='/squads/new' method="POST">
                <div class="form-group mb-2">
                    <label for="sender">Squad name</label>
                    <input name="squadName" class="form-control" type="text">
                </div>
                <div class="form-group mb-2">
                    <label for="recipient">Max number of members</label>
                    <input name="maxNumber" class="form-control" type="number">
                </div>
                <div class="form-group mb-2">
                    <label for="cause">Squads cause</label>
                    <textarea placeholder="What is squad's cause?" class="form-control" name="cause"></textarea>
                </div>

                <button type="submit" class="btn btn-primary mb-2">Submit</button>
            </form>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}
